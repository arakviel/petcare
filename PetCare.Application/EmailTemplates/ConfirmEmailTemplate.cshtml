@using PetCare.Application.Features.Auth.ResendVerification
@model ConfirmEmailViewModel

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>Підтвердження Email</title>
    <style>
        /* Загальний фон листа */
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(120deg, #fdf6f0, #fff1f0);
            color: #2E2C2C;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        /* Контейнер листа */
        .container {
            max-width: 600px;
            margin: 50px auto;
            background: #ffffff;
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            text-align: center;
        }

        /* Логотип */
        .logo {
            margin-bottom: 30px;
        }

        /* Заголовок */
        h1 {
            font-size: 28px;
            font-weight: bold;
            color: #2E2C2C;
            margin-top: 0;
            margin-bottom: 20px;
        }

        /* Параграфи */
        p {
            color: #555555;
            font-size: 16px;
            line-height: 1.6;
            margin: 15px 0;
        }

        /* Кнопка */
        .button {
            display: inline-block;
            background: #4F7FFF;
            color: #ffffff !important;
            text-decoration: none;
            min-width: 260px;
            height: 52px;
            line-height: 52px;
            text-align: center;
            text-transform: uppercase;
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 40px;
            font-weight: bold;
            transition: background 0.3s ease;
        }

            .button:hover {
                background: #8aa9ff;
            }

            .button:active {
                background: #2e66ff;
            }

        /* Футер */
        .footer {
            margin-top: 30px;
            font-size: 13px;
            color: #888888;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="cid:petcare-logo" alt="PetCare Logo" width="253" height="100" />
        </div>
        <h1>Привіт, @Model.UserName!</h1>
        <p>
            Щоб завершити реєстрацію, підтвердіть свій email, натиснувши на кнопку нижче:
        </p>
        <p>
            <a href="@Model.ConfirmationUrl" class="button">ПІДТВЕРДИТИ EMAIL</a>
        </p>
        <p class="footer">
            Якщо ви не створювали акаунт, просто ігноруйте цей лист.
        </p>
    </div>
</body>
</html>
